.{{distribution}}@container-ifnot-exists@arm64v8:
  extends: .{{distribution}}@container-ifnot-exists
  image: $CI_REGISTRY/wayland/ci-templates/arm64v8/buildah:{{ bootstrap_tag }}
  tags:
